<div class="social-wrapper">
  <div class="social-icons">
    <div class="social-icons-label">{{ pll_e('Share this', 'psj_theme') }}</div>
    <ul class="social-icons-list">
      <li class="social-icons-item">
        <a class="social-icons-icon icon-facebook" href="http://www.facebook.com/sharer/sharer.php?u={{ permalink }}" target="_blank"><i class="fab fa-facebook-f"></i></a>
      </li>
      <li class="social-icons-item">
        <a class="social-icons-icon icon-linkedin" href="https://www.linkedin.com/shareArticle?mini=true&url={{ permalink }}&title={{ title }}&summary=&source=" target="_blank"><i class="fab fa-linkedin-in"></i></a>
      </li>
      <li class="social-icons-item">
        <a class="social-icons-icon icon-twitter" href="http://www.twitter.com/share?url={{ permalink }}" target="_blank"><i class="fab fa-twitter"></i></a>
      </li>
    </ul>
  </div>
  {% if print_icon == 1 %}
  <div class="print-content"><a href="javascript:window.print()">{{ pll_e('Print', 'ffw_theme') }}</a></div>
  {% endif %}
</div>
