{% extends 'layout.twig' %}

{% block feature %}
  <div class="page-title-wrapper">
    <div class="container">
      <div class="main-inner">
        {% if title is defined %}
          <h1 id="page-title">{{title}}</h2>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}

{% block content %}
  <div class="main-wrapper">
    <div class="container">
      <div class="main-inner">
        <div class="block-list-post">
          <div class="list-posts">
          {% for post in return_items %}
            {% if function('is_tag') %}
              {% include ['tags.twig', 'archive-tease.twig'] %}
            {% elseif function('is_category') %}
              {% include ['category.twig', 'archive-tease.twig'] %}
            {% elseif function('is_post_type_archive') %}
              {% include ["archive-"~post.post_type~".twig", 'archive-tease.twig'] %}
            {% else %}
              {% include 'archive-tease.twig' %}
            {% endif %}
          {% endfor %}
          </div>
          {% include 'pagination.twig' %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}